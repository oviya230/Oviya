

#include <stdio.h>

int main() {
    int rows, i, j, num;

    // Input number of rows
    printf("Enter the number of rows: ");
    scanf("%d", &rows);

    // Print pyramid
    for(i = 1; i <= rows; i++) {
        // Print spaces
        for(j = 1; j <= rows - i; j++) {
            printf("  "); // Two spaces for alignment
        }

        // Print numbers
        num = 1;
        for(j = 1; j <= i; j++) {
            printf("%d ", num);
            num++;
        }

        printf("\n");
    }

    return 0;
}

