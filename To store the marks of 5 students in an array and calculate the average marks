

#include <stdio.h>

int main() {
    int marks[5];
    int i, sum = 0;
    float average;

    // Input marks for 5 students
    printf("Enter marks of 5 students:\n");
    for(i = 0; i < 5; i++) {
        scanf("%d", &marks[i]);
    }

    // Calculate sum
    for(i = 0; i < 5; i++) {
        sum += marks[i];
    }

    // Calculate average
    average = sum / 5.0; // use 5.0 to get float division

    // Display average
    printf("Average marks = %.2f\n", average);

    return 0;
}

