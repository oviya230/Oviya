#include <stdio.h>

int main() {
    int num = 10;        // A normal integer variable
    int *ptr;            // Pointer to an integer

    ptr = &num;          // Store the address of num in ptr

    printf("Value of num: %d\n", num);
    printf("Address of num: %p\n", &num);
    printf("Value stored in ptr (address of num): %p\n", ptr);
    printf("Value pointed to by ptr: %d\n", *ptr);

    // Modify the value of num using pointer
    *ptr = 20;
    printf("New value of num after using pointer: %d\n", num);

    return 0;
}
