

#include <stdio.h>

int main() {
    int team1[4], team2[4];
    int i, total1 = 0, total2 = 0;

    // Input scores for Team 1
    printf("Enter scores for Team 1 in 4 games:\n");
    for(i = 0; i < 4; i++) {
        scanf("%d", &team1[i]);
        total1 += team1[i]; // Add to total
    }

    // Input scores for Team 2
    printf("Enter scores for Team 2 in 4 games:\n");
    for(i = 0; i < 4; i++) {
        scanf("%d", &team2[i]);
        total2 += team2[i]; // Add to total
    }

    // Display total

